<header id="page-header">
  <nav>
    <% if @comic.present? %>
      <a>作品名：<%= @comic.title %></a>
    <% else %>
      <a>作品が選択されていません</a>
    <% end %>
  </nav>

  <%= link_to "作品一覧に戻る", works_path %>

  <!-- ▼ ハンバーガーメニュー ▼ -->
  <div id="hamburger-menu" onclick="toggleMenu()">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- ▼ メニュー本体 ▼ -->
  <div id="side-menu" class="hidden">
    <ul>
      <li><%= link_to "ホーム", root_path %></li>
      <li><%= link_to "作品一覧", works_path %></li>
      <li><button type="button" class="link-style" onclick="toggleSearchForm()">検索</button></li>
    </ul>
  </div>
</header>

 <!-- 検索フォーム -->
<%= render "shared/search_modal" %>

<style>
.hidden {
  display: none;
}

#page-header {
  background-color: #82D8FF;
  padding: 10px;
  text-align: left;
  width: 100%;
  z-index: 100;
}
#hamburger-menu {
  width: 30px;
  height: 22px;
  position: absolute;
  top: 30px;
  right: 15px;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
#hamburger-menu span {
  display: block;
  height: 4px;
  background-color: #333;
  border-radius: 2px;
}

/* メニュー */
#side-menu {
  position: absolute;
  top: 60px;
  right: 15px;
  background-color: #fff;
  border: 1px solid #ccc;
  padding: 10px;
  width: 150px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  z-index: 999;
}
#side-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
#side-menu li {
  margin-bottom: 10px;
}

/* ↓ モーダルを表示する時にこのクラスを使う */
#search-modal.show {
  display: flex;
}

/* button（リンク用） */
button.link-style {
  background: none;
  border: none;
  padding: 0;
  color: #0000EE;
  text-decoration: underline;
  cursor: pointer;
  font-size: 1em;
}


</style>

<script>
  function toggleMenu() {
    const menu = document.getElementById("side-menu");
    menu.classList.toggle("hidden");
  }

// サブメニュー　→ 検索フォームの表示
  document.addEventListener("DOMContentLoaded", function () {
    window.toggleSearchForm = function () {
      const modal = document.getElementById("search-modal");
      modal.classList.toggle("show");   // 表示制御はこっちで
      modal.classList.toggle("hidden"); // 非表示制御はこっちで
    };
  
  });
  
</script>