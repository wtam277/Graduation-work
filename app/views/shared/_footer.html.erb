    justify-content: flex-start;
    align-items: center;
    background-color: #82D8FF;
    padding: 10px;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 100;
  }
  
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 30px;
    width: 60px; /* ← 追加（任意） */
  }
  
  .nav-circle {
    box-sizing: border-box;
    display: flex; /* ← ここを flex に */
    justify-content: center;
    align-items: center;
    background-color: #22B9FF;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    text-decoration: none;
    color: black;
    font-size: 20px;
    font-weight: bold;
  }
  
  .nav-circle.active {
    border: 4px solid #0000ff;
  }

  .nav-label {
    font-size: 12px;
    margin-top: 4px;
    color: #333;
  }