  </head>

  <body>
    <% if ["story_maps", "story_parts", "characters", "panels","pages","relationship_groups"].include?(controller_name) && ["index","new", "show", "edit"].include?(action_name) %>
      <%= render "shared/header" %>
    <% end %>

    <main>
      <%= yield %> <!-- 各ビューのコンテンツをここに描画 -->
    </main>

    <% if ["story_maps", "story_parts", "characters", "panels","pages","relationship_groups"].include?(controller_name) && ["index","new", "show", "edit"].include?(action_name) %>
      <%= render "shared/footer" %>
    <% end %>
  </body>
</html>