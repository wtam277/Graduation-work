<div class="relationship-block">
  <h3>関係設定</h3>

  <% if f %>
  <div class="character-field">
    <%= f.label :character_a_id, "キャラクターを選択 (1人目)" %>
    <%= f.select :character_a_id, options_from_collection_for_select(characters, :id, :name), { include_blank: "キャラクターを選択" }, { class: "character-select" } %>
  </div>

  <div class="character-field">
    <%= f.label :directionality, "関係の向き" %>
    <%= f.select :directionality, [["→", 1], ["⇄", 2]], { include_blank: "関係の向きを選択" }, { class: "directionality-select" } %>
  </div>

  <div class="character-field">
    <%= f.label :relationship_type, "関係の種類" %>
    <%= f.text_field :relationship_type, placeholder: "例: 友達, 兄弟, 師弟" %>
  </div>

  <div class="character-field">
    <%= f.label :character_b_id, "キャラクターを選択 (2人目)" %>
    <%= f.select :character_b_id, options_from_collection_for_select(characters, :id, :name), { include_blank: "キャラクターを選択" }, { class: "character-select" } %>
  </div>

  <!-- 削除ボタン -->
  <button type="button" class="remove-relationship-button">削除</button>
<% else %>
  <p style="color: red;">エラー: `f` が渡されていません</p>
<% end %>